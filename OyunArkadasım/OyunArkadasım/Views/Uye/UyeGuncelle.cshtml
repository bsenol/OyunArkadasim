@model OyunArkadasım.Models.Entity.TBLUYE
@{
    /**/

    ViewBag.Title = "UyeGuncelle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<style>
    .form {
        width: 51%;
        height: auto;
        background: rgba(37, 19, 12, 0.24);
        border: 1px solid #ffb676;
        border-radius: 4px;
        font-family: Constantia;
        font-size: 20px;
        color: #dbc9b8;
        text-align: left;
        padding: 100px;
        padding-top: 20px;
        margin: 30px;
        margin-left: 230px;
    }

        .form h2 {
            color: #ffb676;
            text-align: center;
            text-shadow: 1px 1px 3px rgba(255,193,113,1);
        }

        .form button {
            z-index: 200;
            width: auto;
            margin: auto;
            height: 40px;
            overflow: hidden;
            border-radius: 4px;
            background: url(../../img/button_orange_center.png) top center;
            background-size: auto 100%;
            position: relative;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
            border: none;
            cursor: pointer;
            transition: all .3s ease-in-out;
        }

            .form button span {
                position: relative;
                z-index: 2;
                color: #250e01;
                font-family: Constantia;
                font-size: 18px;
                font-weight: bolder;
                text-shadow: 0px 1px 1px rgba(255,193,113,0.5);
            }

            .form button:hover {
                filter: brightness(130%);
            }


    .text-box {
        height: 40px;
        background: rgba(37, 19, 12, 0.24);
        border: 1px solid #342d29;
        border-radius: 4px;
        font-family: Constantia;
        font-size: 20px;
        /*color: #dbc9b8;*/
        text-align: center;
        margin-bottom: 20px;
    }

    label {
        color: #f2ceaa;
    }
</style>

<div class="form">
    @using (Html.BeginForm("UyeGuncelle1", "Uye", FormMethod.Post))
    {
        <div style="margin-top:15px"></div>
        <form class="form-group">
            <h2>ÜYE BİLGİLERİ GÜNCELLEME</h2>
            @Html.HiddenFor(u => u.Id, new { @class = "text-box" })
            <br />
            <label style="margin-left:45px;">Üye Adı :&nbsp;&nbsp;&nbsp;</label>
            @Html.TextBoxFor(u => u.KULLANICIADI, new { @class = "text-box" })
            @Html.ValidationMessageFor(u => u.KULLANICIADI, "", new { @style = "color:red" })
            <br />
            <label style="margin-left:18px;">Üye Şifresi :&nbsp;&nbsp;&nbsp;</label>
            @Html.TextBoxFor(u => u.PAROLA, new { @class = "text-box" })
            @Html.ValidationMessageFor(u => u.PAROLA, "", new { @style = "color:red" })
            <br />
            <label style="margin-left:28px;">Üye Maili :&nbsp;&nbsp;&nbsp;</label>
            @Html.TextBoxFor(u => u.EMAIL, new { @class = "text-box" })
            <br />
            <label style="margin-left:40px;">Üye Yaşı :&nbsp;&nbsp;&nbsp;</label>
            @Html.TextBoxFor(u => u.YAS, new { @class = "text-box" })
            @Html.ValidationMessageFor(u => u.YAS, "", new { @style = "color:red" })
            <br />
            <label style="margin-left:15px;">Üyenin Adı :&nbsp;&nbsp;&nbsp;</label>
            @Html.TextBoxFor(u => u.AD, new { @class = "text-box" })
            @Html.ValidationMessageFor(u => u.AD, "", new { @style = "color:red" })
            <br />
            <label>Üyenin Soyadı :</label>
            @Html.TextBoxFor(u => u.SOYAD, new { @class = "text-box" })
            @Html.ValidationMessageFor(u => u.SOYAD, "", new { @style = "color:red" })
            <br />
            <div style="margin-top:15px">
                <button class="btn btn-warning"><span>Güncelle</span></button>
            </div>
        </form>



    }
</div>
