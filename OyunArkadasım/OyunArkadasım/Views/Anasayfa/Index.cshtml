
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutUye.cshtml";
}
@{ int satirNo1 = 0; }
@{ int satirNo2 = 0; }
@{ int satirNo3 = 0; }
<h2></h2>

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        .baslik {
            background: url(../../img/baslik-bg2.png) no-repeat;
            width: 100%;
            height: 45px;
            color: #f2ceaa;
            /*text-shadow: 0px 0px 25px #ffffff;*/
            box-shadow: 0px 0px 25px #460000c7;
            border-radius: 5px;
        }



        .sag-baslik h2 {
            padding-left: 230px;
            line-height: 45px;
            font-size: 18px;
            font-family: Constantia;
            font-weight: 600;
        }

        .icerik {
            padding-left: 12px;
            padding-right: 12px;
            background: url(../../img/icerik-bg2.png);
            background-repeat: no-repeat;
            background-size: 100% 100%;
            padding-bottom: 12px;
        }

        #logo {
            width: 100%;
            height: auto;
        }

        .tbl {
            border-radius: 5px;
            font-size: 15px;
            font-weight: normal;
            border: none;
            border-collapse: collapse;
            width: 100%;
            max-width: 100%;
            white-space: nowrap;
            background: rgb(47,38,33);
            background: linear-gradient(90deg, rgba(47,38,33,0.5) 0%, rgba(0,0,0,0.5) 58%, rgba(0,0,0,0) 100%, rgba(0,0,0,0) 100%);
            box-shadow: -1px -1px 22px 3px rgba(0,0,0,0.75);
            margin-bottom: 20px;
        }


        .siralama-baslik {
            color: #ffc58a;
            font-family: Constantia;
            font-weight: 600;
            font-size: 15px;
            text-align: center;
            width: 100%;
            background: rgb(47,38,33);
            background: linear-gradient(90deg, rgba(47,38,33,0.5) 0%, rgba(0,0,0,0.5) 58%, rgba(0,0,0,0) 100%, rgba(0,0,0,0) 100%);
            box-shadow: -1px -1px 22px 3px rgba(0,0,0,0.75);
            border-radius: 5px;
            border-collapse: collapse;
            white-space: nowrap;
            border: none;
            height: 40px;
            text-align: center;
            padding-top: 10px;
            text-shadow: 10px 5px 2px #44392d;
        }



        .tbl tbody tr {
            border-bottom: 1px dashed #5e482e;
        }

        .tbl td, .tbl td a {
            font-family: Constantia;
            font-size: 15px;
            padding-top: 9px;
            padding-bottom: 9px;
            color: #ff3d3d;
        }

        .tbl tbody tr:last-child {
            border-bottom: none;
        }

        .tbl td, .tbl th {
            padding: 8px;
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3" style="width:30%;margin-left:10px">
                <div id="logo">
                    <img id="logo" src="~/img/logo2.png" alt="Alternate Text" />
                    <h4 class="siralama-baslik">LOL TOP5</h4>
                    <table class="tbl">
                        <tr>
                            <td>#</td>
                            <td>Nickname</td>
                            <td>Puan</td>
                        </tr>
                        @foreach (var dgr in ViewBag.dgr1)
                        {
                            <tr>
                                <td>@(satirNo1 += 1)</td>
                                <td><a href="/Uye/UyeProfilGoster/@dgr.UYEID">@dgr.NICKNAME</a></td>
                                <td>@dgr.PUAN</td>
                            </tr>
                        }
                    </table>
                    <h4 class="siralama-baslik">CS:GO TOP5</h4>
                    <table class="tbl">
                        <tr>
                            <td>#</td>
                            <td>Nickname</td>
                            <td>Puan</td>
                        </tr>
                        @foreach (var dgr in ViewBag.dgr2)
                        {
                            <tr>
                                <td>@(satirNo2 += 1)</td>
                                <td><a href="/Uye/UyeProfilGoster/@dgr.UYEID">@dgr.NICKNAME</a></td>
                                <td>@dgr.PUAN</td>

                            </tr>
                        }
                    </table>
                    <h4 class="siralama-baslik">VALORANT TOP5</h4>
                    <table class="tbl">
                        <tr>
                            <td>#</td>
                            <td>Nickname</td>
                            <td>Puan</td>
                        </tr>
                        @foreach (var dgr in ViewBag.dgr3)
                        {
                            <tr>
                                <td>@(satirNo3 += 1)</td>
                                <td><a href="/Uye/UyeProfilGoster/@dgr.UYEID">@dgr.NICKNAME</a></td>
                                <td>@dgr.PUAN</td>

                            </tr>
                        }
                    </table>
                </div>
            </div>
            <div class="col-sm-9 col-md-9 col-lg-9" style="float:right;width:67%;margin-right:10px">

                <div class="baslik sag-baslik">
                    <h2>OyunArkadasim.com'a Hoşgeldiniz.</h2>
                </div>
                <div id="myCarousel" class="carousel slide icerik" data-ride="carousel" style="">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="~/img/slider2.jpg" style="width:100%;">
                        </div>

                        <div class="item">
                            <img src="~/img/slider1.jpg" style="width:100%;">
                        </div>

                        <div class="item">
                            <img src="~/img/slider3.jpg" style="width:100%;">
                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

            </div>
        </div>
    </div>


</body>
</html>
